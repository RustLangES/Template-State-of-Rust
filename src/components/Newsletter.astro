---
const { locale } = Astro.props
import uiLang from '../../public/i18n/ui.json';
interface Props {
    locale: "en";
};
---

<div
  class="flex flex-col items-center justify-center gap-y-4 bg-background w-full py-4 px-6 my-4"
>
  <h3 class="text-2xl font-semibold">{uiLang["index.newsletter"][locale][0]}</h3>
  <p class="opacity-70">
    {uiLang["index.newsletter"][locale][1]}
  </p>
  <div class="w-full">
    <form method="post">
      <input
        class="w-full bg-orange-300/30 py-2 px-2"
        id="field_0"
        name="field_0"
        type="email"
      />
      <input
        type="text"
        tabindex={-1}
        autocomplete="nope"
        style={{ display: "none" }}
      />
      <button
        type="submit"
        name="subscribe"
        class="border border-dashed border-primary w-full py-2 mt-2"
      >
        {uiLang["index.newsletter"][locale][2]}</button
      >
    </form>
  </div>
</div>
